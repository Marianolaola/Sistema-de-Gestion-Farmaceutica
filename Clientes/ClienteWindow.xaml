<Window x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.ClienteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica.Clientes"
        Title="{Binding Titulo}" Height="600" Width="450"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#283342">

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!--Titulo-->
        <TextBlock Text="Agregar Cliente" 
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>
        
        <local:ClienteForm Grid.Row="1"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="100" Height="35" Margin="0,0,10,0"
                    Background="Beige" FontWeight="SemiBold"
                    Command="{Binding GuardarCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Cursor="Hand" Click="BtnAceptar_Click"/>
            <Button Content="Cancelar" Width="100" Height="35" Margin="0,0,10,0"
                    Background="Gray" FontWeight="SemiBold"
                    Command="{Binding CancelarCommand}" 
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Cursor="Hand"  Click="BtnCancelar_Click"/>
        </StackPanel>

    </Grid>
</Window>
