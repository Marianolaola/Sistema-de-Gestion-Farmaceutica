<Window x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.GestionarObrasSociales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestionar Obras Sociales" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="#283342">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gestionar Obra Social" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="White" 
                       HorizontalAlignment="Center"/>
            <TextBlock x:Name="lblNombreCliente" 
                       Text="Cliente: Cargando..." 
                       FontSize="16" 
                       Foreground="LightGray" 
                       HorizontalAlignment="Center" 
                       Margin="0,5,0,0"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Disponibles" FontWeight="SemiBold" Foreground="White" Margin="5,0,5,5"/>
                <ListView x:Name="lvDisponibles" BorderThickness="1" BorderBrush="Gray"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <Button x:Name="btnAgregar" Content=">" FontWeight="Bold" Width="40" Height="30" Margin="0,5" Click="btnAgregar_Click" Cursor="Hand"/>
                <Button x:Name="btnQuitar" Content="&lt;" FontWeight="Bold" Width="40" Height="30" Margin="0,5" Click="btnQuitar_Click" Cursor="Hand"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Asociadas al Cliente" FontWeight="SemiBold" Foreground="White" Margin="5,0,5,5"/>
                <ListView x:Name="lvAsociadas" BorderThickness="1" BorderBrush="Gray">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Obra Social" DisplayMemberBinding="{Binding nombre}" Width="150"/>
                            <GridViewColumn Header="N° de Afiliado" DisplayMemberBinding="{Binding nro_afiliado}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnGuardar" 
                    Content="Guardar Cambios" 
                    Width="130" Height="35" 
                    Background="Beige" 
                    FontWeight="SemiBold" 
                    Click="btnGuardar_Click" 
                    Cursor="Hand"/>
            <Button x:Name="btnCancelar" 
                    Content="Cancelar" 
                    Width="110" Height="35" 
                    Margin="10,0,0,0" 
                    Background="Gray" 
                    FontWeight="SemiBold" 
                    Click="btnCancelar_Click" 
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>