<Window x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.GestionarObrasSociales"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Gestionar Obras Sociales" Height="450" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="{StaticResource ColorVerdeFondo}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Gestionar Obra Social" 
                       FontSize="28" 
                       Foreground="{StaticResource ColorBlancoRotoFondo}" HorizontalAlignment="Center"
                       FontFamily="{StaticResource FontMontserratBold}"/>
            <TextBlock x:Name="lblNombreCliente" 
                       Text="Cliente: Cargando..." 
                       FontSize="16" 
                       Foreground="{StaticResource ColorVerdeOscuroAcento}" HorizontalAlignment="Center" 
                       Margin="0,5,0,0"
                       FontFamily="{StaticResource FontMontserratRegular}"/>
        </StackPanel>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Disponibles" FontWeight="SemiBold" 
                           Foreground="{StaticResource ColorBlancoRotoFondo}" Margin="5,0,5,5"
                           FontFamily="{StaticResource FontMontserratRegular}"/>
                <ListView x:Name="lvDisponibles" BorderThickness="1" BorderBrush="Gray"/>
            </StackPanel>

            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                <Button x:Name="btnAgregar" Content=">" FontWeight="Bold" Margin="0,5" Click="btnAgregar_Click" 
                        Style="{StaticResource SmallPrimaryActionButtonStyle}" Width="40"/>
                <Button x:Name="btnQuitar" Content="&lt;" FontWeight="Bold" Margin="0,5" Click="btnQuitar_Click" 
                        Style="{StaticResource SmallDestructiveActionButtonStyle}" Width="40"/>
            </StackPanel>

            <StackPanel Grid.Column="2">
                <TextBlock Text="Asociadas al Cliente" FontWeight="SemiBold" 
                           Foreground="{StaticResource ColorBlancoRotoFondo}" Margin="5,0,5,5"
                           FontFamily="{StaticResource FontMontserratRegular}"/>
                <ListView x:Name="lvAsociadas" BorderThickness="1" BorderBrush="Gray">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Obra Social" DisplayMemberBinding="{Binding nombre}" Width="150"/>
                            <GridViewColumn Header="N° de Afiliado" DisplayMemberBinding="{Binding nro_afiliado}" Width="150"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnGuardar" 
                    Content="Guardar Cambios" 
                    Width="130" Height="35" 
                    Click="btnGuardar_Click" 
                    Style="{StaticResource PrimaryActionButtonStyle}"/>
            <Button x:Name="btnCancelar" 
                    Content="Cancelar" 
                    Width="110" Height="35" 
                    Margin="10,0,0,0" 
                    Click="btnCancelar_Click" 
                    Style="{StaticResource DestructiveActionButtonStyle}"/>
        </StackPanel>
    </Grid>
</Window>