<Window x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.InputBoxAfiliado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica.Clientes"
        mc:Ignorable="d"
        Title="N° de Afiliado" Height="220" Width="380"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{StaticResource ColorVerdeFondo}">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="lblPrompt" Text="Prompt:" 
                   Foreground="{StaticResource ColorBlancoRotoFondo}" 
                   TextWrapping="Wrap" Margin="0,10,0,0"
                   FontFamily="{StaticResource FontMontserratRegular}"/>

        <TextBox x:Name="txtInput" Grid.Row="1" VerticalAlignment="Center" Padding="5"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnAceptar" Content="Aceptar" 
                    Width="80" Height="30" Click="Aceptar_Click" 
                    Style="{StaticResource PrimaryActionButtonStyle}"/>
            <Button x:Name="btnCancelar" Content="Cancelar" 
                    Width="80" Height="30" Margin="10,00,0,0" Click="Cancelar_Click" 
                    Style="{StaticResource DestructiveActionButtonStyle}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>