<Window x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.InputBoxAfiliado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica.Clientes"
        mc:Ignorable="d"
        Title="Input" Height="180" Width="350"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#283342">


    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>



        <TextBlock x:Name="lblPrompt" Text="Prompt:" Foreground="White" TextWrapping="Wrap" Margin="0,10,0,0"/>
        <TextBox x:Name="txtInput" Grid.Row="1" VerticalAlignment="Center" Height="25" Padding="5"/>


        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnAceptar" Content="Aceptar" Width="80" Height="30" Click="Aceptar_Click" Background="Beige"/>
            <Button x:Name="btnCancelar" Content="Cancelar" Width="80" Height="30" Margin="10,0,0,0" Click="Cancelar_Click" Background="Gray" IsCancel="True"/>
        </StackPanel>

    </Grid>
</Window>
