<UserControl x:Class="Sistema_de_Gestión_Farmacéutica.Clientes.ClienteForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica.Clientes"
             Height="450" Width="400">
    <Grid Margin="20">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/><!--Labels-->
            <ColumnDefinition Width="*"/> <!--Inmput-->
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>

        </Grid.RowDefinitions>

            <!--Nombre-->
            <TextBlock Text="Nombre:" Foreground="White" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.nombre}" Grid.Row="0" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--Apellido-->
            <TextBlock Text="Apellido:" Foreground="White" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.apellido}" Grid.Row="1" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--DNI-->
            <TextBlock Text="DNI:" Foreground="White" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.dni}" IsReadOnly="{Binding esEdicion}" Grid.Row="2" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--Email-->
            <TextBlock Text="Email:" Foreground="White" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.email}" Grid.Row="3" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--Teléfono-->
            <TextBlock Text="Teléfono:" Foreground="White" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.telefono}" Grid.Row="4" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--Fecha de Nacimiento-->
            <TextBlock Text="Fecha nacimiento:" Foreground="White" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" Margin="0,5"/>
            <DatePicker SelectedDate="{Binding cliente.fecha_nacimiento}" Grid.Row="5" Grid.Column="1" Height="30" Margin="0,5" Padding="5"  />

            <!--Direccion-->
            <TextBlock Text="Direccion:" Foreground="White" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0" Margin="0,5"/>
            <TextBox Text="{Binding cliente.direccion}" Grid.Row="6" Grid.Column="1" Height="27" Margin="0,5" Padding="5"  />

            <!--Obra Social-->
            <TextBlock Text="Obra Social:" Foreground="White" VerticalAlignment="Center" Grid.Row="7" Grid.Column="0" Margin="0,5"/>

            <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Vertical" Margin="0,5">

                <!-- ComboBox para seleccionar obra social -->
                <ComboBox ItemsSource="{Binding obrasSociales}" 
                          SelectedItem="{Binding obraSocialSeleccionada}"
                          DisplayMemberPath="nombre"
                          Height="27" Margin="0,0,0,5"
                          IsEditable="True"
                          Text="Seleccione una obra Social"/>

                <!-- Botones Agregar y Eliminar -->
              <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                <Button Content="Agregar" Width="70" Margin="0,0,5,0" Click="btnAgregarObraSocial_Click"/>
                <Button Content="Eliminar" Width="70" Click="btnEliminarObraSocial_Click"/>
              </StackPanel>

                <!-- Lista de obras sociales asignadas -->
            <ListBox x:Name="listaObrasSociales"
                     ItemsSource="{Binding obrasSocialesAsignadas}"
                     DisplayMemberPath="nombre_obra_social"
                     Height="80" Margin="0,5,0,0"/>
            </StackPanel>

    </Grid>
    
</UserControl>
