<UserControl x:Class="Sistema_de_Gestión_Farmacéutica.UsuariosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="{StaticResource ColorVerdeFondo}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Gestión de Usuarios" 
                   Grid.Row="0"
                   FontSize="24" 
                   Foreground="{StaticResource ColorBlancoRotoFondo}"
                   FontFamily="{StaticResource FontMontserratRegular}"
                   Margin="0,0,0,15"/>

        <Border Grid.Row="1" 
                Background="{StaticResource ColorBlancoRotoFondo}" 
                CornerRadius="5" 
                Padding="10" 
                Margin="0,0,0,10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>

            <WrapPanel>
                <Button x:Name="btnAgregar" 
                        Content="➕ Agregar" 
                        Click="btnAgregar_Click"
                        Style="{StaticResource SmallPrimaryActionButtonStyle}"/>

                <Button x:Name="btnEditar" 
                        Content="⚙️ Editar" 
                        Click="btnEditar_Click"
                        Style="{StaticResource SmallPrimaryActionButtonStyle}"/>

                <Button x:Name="btnEliminar" 
                        Content="🗑 Eliminar" 
                        Click="btnEliminar_Click"
                        Style="{StaticResource SmallDestructiveActionButtonStyle}"/>
                <Button x:Name="btnVerInactivos" Content="📄 Historial" 
                        Style="{StaticResource SmallFilterActionButtonStyle}" Click="btnVerInactivos_Click"/>

                <TextBlock Text="Buscar por Email:" VerticalAlignment="Center" 
                           Margin="10,0,5,0" FontWeight="SemiBold" FontSize="12"
                           Foreground="{StaticResource ColorVerdeOscuroAcento}"/>

                <TextBox x:Name="txtBusquedaEmail" Width="150" Margin="5"
                         TextChanged="txtBusquedaEmail_TextChanged"/>
                
            </WrapPanel>
        </Border>

        <Border Grid.Row="2" 
                Background="{StaticResource ColorBlancoRotoFondo}" 
                CornerRadius="5" 
                Padding="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.1" BlurRadius="5"/>
            </Border.Effect>

            <DataGrid x:Name="dgUsuarios" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single"
                      Background="Transparent" BorderThickness="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding id_usuario}" Width="Auto"/>
                    <DataGridTextColumn Header="Nombre" Binding="{Binding nombre}" Width="*"/>
                    <DataGridTextColumn Header="Apellido" Binding="{Binding apellido}" Width="*"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding email}" Width="2*"/>
                    <DataGridTextColumn Header="Rol" Binding="{Binding rol}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

    </Grid>
</UserControl>