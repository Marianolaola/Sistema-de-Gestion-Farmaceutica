<Window x:Class="Sistema_de_Gestión_Farmacéutica.AgregarUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Usuario" Height="470" Width="420"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#283342">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Nuevo Usuario" 
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Nombre:" Foreground="White" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Height="27" Margin="0,5" Padding="5" PreviewTextInput="SoloLetras_PreviewTextInput"/>

            <TextBlock Text="Apellido:" Foreground="White" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtApellido" Grid.Row="1" Grid.Column="1" Height="27" Margin="0,5" Padding="5" PreviewTextInput="SoloLetras_PreviewTextInput"/>

            <TextBlock Text="Email:" Foreground="White" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,5"/>
            <TextBox x:Name="txtEmail" Grid.Row="2" Grid.Column="1" Height="27" Margin="0,5" Padding="5"/>

            <TextBlock Text="Contraseña:" Foreground="White" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="0,5"/>
            <PasswordBox x:Name="txtContraseña" Grid.Row="3" Grid.Column="1" Height="27" Margin="0,5" Padding="5" PreviewTextInput="txtContraseña_PreviewTextInput"/>

            <TextBlock Text="Rol:" Foreground="White" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Margin="0,5"/>
            <ComboBox x:Name="cmbRol" Grid.Row="4" Grid.Column="1" Height="27" Margin="0,5" Padding="5">
            </ComboBox>
        </Grid>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="110" Height="35" Margin="0,0,10,0"
                    Background="Beige" FontWeight="SemiBold" Click="Aceptar_Click" Cursor="Hand"/>
            <Button Content="Cancelar" Width="110" Height="35"
                    Background="Gray" FontWeight="SemiBold" Click="Cancelar_Click" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>