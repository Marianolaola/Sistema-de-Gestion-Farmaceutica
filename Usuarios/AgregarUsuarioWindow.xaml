<Window x:Class="Sistema_de_Gestión_Farmacéutica.AgregarUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Usuario" Height="450" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Nombre -->
            <RowDefinition Height="Auto"/>
            <!-- Apellido -->
            <RowDefinition Height="Auto"/>
            <!-- Contraseña -->
            <RowDefinition Height="Auto"/>
            <!-- Email -->
            <RowDefinition Height="Auto"/>
            <!-- Rol -->
            <RowDefinition Height="Auto"/>
            <!-- Botones -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Nombre -->
        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="Nombre"/>
            <TextBox x:Name="txtNombre" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <!-- Apellido -->
        <StackPanel Orientation="Vertical" Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Text="Apellido"/>
            <TextBox x:Name="txtApellido" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <!-- Contraseña -->
        <StackPanel Orientation="Vertical" Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Text="Contraseña"/>
            <PasswordBox x:Name="txtContraseña" PreviewTextInput="txtContraseña_PreviewTextInput"/>
        </StackPanel>

        <!-- Email -->
        <StackPanel Orientation="Vertical" Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Text="Email"/>
            <TextBox x:Name="txtEmail"/>
        </StackPanel>

        <!-- Rol -->
        <StackPanel Orientation="Vertical" Grid.Row="4" Margin="0,0,0,10">
            <TextBlock Text="Rol"/>
            <ComboBox x:Name="cmbRol">
                <ComboBoxItem Content="Gerente"/>
                <ComboBoxItem Content="Administrador"/>
                <ComboBoxItem Content="Farmaceutico"/>
            </ComboBox>
        </StackPanel>

        <!-- Botones -->
        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Aceptar" Width="80" Margin="5" Click="Aceptar_Click" Height="40"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancelar_Click" Height="40"/>
        </StackPanel>
    </Grid>
</Window>
