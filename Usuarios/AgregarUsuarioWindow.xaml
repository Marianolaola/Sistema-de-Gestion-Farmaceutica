<Window x:Class="Sistema_de_Gestión_Farmacéutica.AgregarUsuarioWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nuevo Usuario" Height="300" Width="400" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10">
            <TextBlock Text="Nombre"/>
            <TextBox x:Name="txtNombre" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="1">
            <TextBlock Text="Apellido"/>
            <TextBox x:Name="txtApellido" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="2">
            <TextBlock Text="Contraseña"/>
            <PasswordBox x:Name="txtContraseña" PreviewTextInput="txtContraseña_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="3">
            <TextBlock Text="Rol"/>
            <ComboBox x:Name="cmbRol">
                <ComboBoxItem Content="Gerente"/>
                <ComboBoxItem Content="Administrador"/>
                <ComboBoxItem Content="Farmaceutico"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="Aceptar" Width="80" Margin="5" Click="Aceptar_Click"/>
            <Button Content="Cancelar" Width="80" Margin="5" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
