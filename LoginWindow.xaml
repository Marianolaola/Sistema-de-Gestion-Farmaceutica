<Window x:Class="Sistema_de_Gestión_Farmacéutica.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="DodgerBlue">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Left" Width="350" Grid.Column="1" Margin="53,0,0,0">
            <TextBlock Text="Bienvenido" Foreground="White" FontSize="50" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20"/>
            <TextBox x:Name="txtUsuario" Foreground="Black" Height="30" FontSize="14" Margin="0,0,0,15" BorderThickness="0" Padding="5"/>
            <PasswordBox x:Name="txtContraseña" Foreground="Black" Height="30" FontSize="14" Margin="0,0,0,15" PasswordChar="*"  Padding="5" />
            <Button Content="Acceder" 
            Height="40" 
            Background="Beige" 
            FontSize="16" 
            FontWeight="SemiBold" 
            Click="Entrar_Click" 
            BorderThickness="0" 
            Cursor="Hand"/>

            <TextBlock Text="@ Todos los derechos reservados" FontSize="12" Foreground="White" HorizontalAlignment="Center" Margin="0,40,0,0" />

        </StackPanel>

    </Grid>
</Window>
