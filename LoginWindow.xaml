<Window x:Class="Sistema_de_Gestión_Farmacéutica.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="550" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="{StaticResource ColorVerdeFondo}" 
        TextOptions.TextFormattingMode="Display"
        TextOptions.TextRenderingMode="ClearType">

    <Border Background="{StaticResource ColorBlancoRotoFondo}" CornerRadius="10"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Width="380"
            Height="450" Padding="30" >
        <Border.Effect>
            <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.1" BlurRadius="15"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Image Source="/Assets/Images/logo.png" 
                       Grid.Column="0"
                       Height="80"
                       VerticalAlignment="Bottom"
                       Margin="0,0,10,0"/>

                <TextBlock Text="MedicApp" 
                           Grid.Column="1"
                           Foreground="{StaticResource ColorVerdeOscuroAcento}" 
                           FontSize="42" 
                           VerticalAlignment="Bottom" 
                           FontFamily="{StaticResource FontMontserratBold}"/>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Email" Foreground="{StaticResource ColorVerdeOscuroAcento}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox x:Name="txtEmail" />
                <TextBlock Text="Contraseña" Foreground="{StaticResource ColorVerdeOscuroAcento}" FontSize="14" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="txtContraseña" PasswordChar="*"/>
                <Button Content="Acceder" 
                        Click="Entrar_Click"
                        IsDefault="True"
                        Style="{StaticResource LoginButtonStyle}"/>
            </StackPanel>

            <TextBlock Grid.Row="2"
                       Text="© Todos los derechos reservados" 
                       FontSize="12" 
                       Foreground="Gray" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Bottom"
                       Margin="0,15,0,0"/>
        </Grid>
    </Border>
</Window>