<Window x:Class="Sistema_de_Gestión_Farmacéutica.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="450" Width="800"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen"
        Background="#283342">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="157*"/>
        </Grid.ColumnDefinitions>

        <StackPanel VerticalAlignment="Center" Grid.Column="1" Margin="10,0,168,0">

            <!-- Título de bienvenida -->
            <TextBlock Text="Bienvenido al sistema" 
                       Foreground="White" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,30"/>

            <!-- Email -->
            <TextBlock Text="Email" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <TextBox x:Name="txtEmail" 
                     Height="35" 
                     FontSize="14" 
                     Margin="0,0,0,15" 
                     BorderThickness="0" 
                     Padding="5"/>

            <!-- Contraseña -->
            <TextBlock Text="Contraseña" Foreground="White" FontSize="14" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtContraseña" 
                         Height="35" 
                         FontSize="14" 
                         Margin="0,0,0,20" 
                         PasswordChar="*"  
                         Padding="5" />

            <!-- Botón Acceder -->
            <Button Content="Acceder" 
                    Height="45" 
                    Background="#F0E68C" 
                    FontSize="16" 
                    FontWeight="SemiBold" 
                    Click="Entrar_Click" 
                    BorderThickness="0" 
                    Cursor="Hand"/>
            
            <!-- Pie de página -->
            <TextBlock Text="© Todos los derechos reservados" 
                       FontSize="12" 
                       Foreground="White" 
                       HorizontalAlignment="Center" 
                       Margin="0,40,0,0" />

        </StackPanel>
        
    </Grid>
</Window>
