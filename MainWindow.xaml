<Window x:Class="Sistema_de_Gestión_Farmacéutica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Gestión Farmacéutica"
        WindowStartupLocation="CenterScreen"
        Width="1200" Height="700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <StackPanel Background="#283342" Grid.Column="0">

            <!-- Perfil -->
            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top">
                <Ellipse Width="80" Height="80" Stroke="White" StrokeThickness="2" Margin="0,10,0,5">
                  <!--  
                    <Ellipse.Fill>
                        <ImageBrush ImageSource="perfil.png"/>
                         ruta de la imagen de perfil            
                    </Ellipse.Fill>
                  -->
                </Ellipse>
                <TextBlock x:Name="txtUsuario" Text="Juan Pérez" Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock x:Name="txtRol" Text="Farmacéutico" Foreground="LightGray" FontSize="12" HorizontalAlignment="Center"/>
            </StackPanel>

            <Separator Margin="10"/>

            <!-- Botones de navegación -->
            <StackPanel>
                <Button x:Name="btnDashboard" Content="🏠 Dashboard" Background="Transparent" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="10,5" Click="AbrirDashboard_Click"/>
                <Button x:Name="btnUsuarios" Content="👤 Usuarios" Background="Transparent" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="10,5" Click="AbrirUsuarios_Click"/>
                <Button x:Name="btnMedicamentos" Content="💊 Medicamentos" Background="Transparent" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="10,5" Click="AbrirMedicamentos_Click"/>
                <Button x:Name="btnVentas" Content="🛒 Ventas" Background="Transparent" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="10,5" Click="AbrirVentas_Click"/>
                <Button x:Name="btnReportes" Content="📊 Reportes" Background="Transparent" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="10,5" Click="AbrirReportes_Click"/>
            </StackPanel>

            <!-- Cerrar sesión y versión -->
            <StackPanel VerticalAlignment="Bottom" Margin="10">
                <Button Content="Cerrar Sesión" Background="Transparent" Foreground="White" FontWeight="Bold" Click="CerrarSesion_Click"/>
                <TextBlock Text="V1.0" Foreground="Gray" FontSize="11" HorizontalAlignment="Left" Margin="0,5,0,10"/>
            </StackPanel>
        </StackPanel>

        <!-- Panel central -->
        <Grid Grid.Column="1" Background="#F5F5F5">
            <ContentControl x:Name="ContenidoPrincipal"/>
        </Grid>
    </Grid>
</Window>
