<Window x:Class="Sistema_de_Gestión_Farmacéutica.AgregarMedicamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Nuevo Medicamento" Height="490" Width="550"
        ResizeMode="NoResize" WindowStartupLocation="CenterScreen" 
        Background="{StaticResource ColorVerdeFondo}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Agregar Medicamento" 
                   FontSize="28"
                   Foreground="{StaticResource ColorBlancoRotoFondo}"
                   HorizontalAlignment="Center" Margin="0,0,0,20"
                   Grid.Row="0" FontFamily="{StaticResource FontMontserratRegular}"/>

        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Nombre Comercial:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="0,5" Padding="5" PreviewTextInput="SoloLetras_PreviewTextInput"/>

            <TextBlock Text="Presentación:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtPresentacion" Grid.Row="1" Grid.Column="1" Margin="0,5" Padding="5"/>

            <TextBlock Text="Laboratorio:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtLaboratorio" Grid.Row="2" Grid.Column="1" Margin="0,5" Padding="5"/>

            <TextBlock Text="Precio Unitario:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtPrecioUnitario" Grid.Row="3" Grid.Column="1" Margin="0,5" Padding="5" PreviewTextInput="Decimales_PreviewTextInput"/>

            <TextBlock Text="Stock:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtStock" Grid.Row="4" Grid.Column="1" Margin="0,5" Padding="5" PreviewTextInput="SoloNumeros_PreviewTextInput"/>

            <TextBlock Text="Stock Mínimo:" Foreground="{StaticResource ColorBlancoRotoFondo}" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" Margin="0,5" FontWeight="SemiBold" FontFamily="{StaticResource FontMontserratRegular}"/>
            <TextBox x:Name="txtStockMinimo" Grid.Row="5" Grid.Column="1" Margin="0,5" Padding="5" PreviewTextInput="SoloNumeros_PreviewTextInput"/>
        </Grid>

        <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Aceptar" Width="110" Height="35" Margin="0,0,10,0" 
                    Style="{StaticResource PrimaryActionButtonStyle}" Click="Aceptar_Click"/>
            <Button Content="Cancelar" Width="110"  Height="35" 
                    Style="{StaticResource DestructiveActionButtonStyle}" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>