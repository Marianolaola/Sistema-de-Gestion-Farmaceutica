<Window x:Class="Sistema_de_Gestión_Farmacéutica.AgregarMedicamentoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sistema_de_Gestión_Farmacéutica"
        mc:Ignorable="d"
        Title="Nuevo Medicamento" Height="400" Width="800" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="13*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <TextBlock Text="Nombre Comercial"/>
            <TextBox x:Name="txtNombre" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="Presentación"/>
            <TextBox x:Name="txtPresentacion"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock Text="Laboratorio"/>
            <TextBox x:Name="txtLaboratorio" PreviewTextInput="SoloLetras_PreviewTextInput"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="3" Grid.ColumnSpan="2">
            <TextBlock Text="Precio Unitario"/>
            <TextBox x:Name="txtPrecioUnitario" />
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="4" Grid.ColumnSpan="2">
            <TextBlock Text="Stock"/>
            <TextBox x:Name="txtStock"/>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="0,0,0,10" Grid.Row="5" Grid.ColumnSpan="2">
            <TextBlock Text="Stock Minimo"/>
            <TextBox x:Name="txtStockMinimo"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Height="Auto" Grid.Row="6" HorizontalAlignment="Right" Margin="0,20,0,0" Grid.Column="1">
            <Button Content="Aceptar" Width="80"  Margin="5" Click="Aceptar_Click"/>
            <Button Content="Cancelar" Width="80"  Margin="5" Click="Cancelar_Click"/>
        </StackPanel>
    </Grid>
</Window>
